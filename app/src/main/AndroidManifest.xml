<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.dawo.binarysearchalgorithm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BinarySearchAlgorithm">
        <activity android:name=".GameUser"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity android:name=".GamePC"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden"/>
        <activity android:name=".ChooseUser" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>